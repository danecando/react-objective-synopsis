var Container = React.createClass({
  handleChange: function(e) {
    this.setState({
      name: e.target.value
    });
  },
  render: function() {
    return (
      <div className="container">
        <HelloReact name={this.state.name} />
        <input type="text" name="name" value={this.state.name}
               onChange={this.handleChange} />
      </div>
    );
  }
});
